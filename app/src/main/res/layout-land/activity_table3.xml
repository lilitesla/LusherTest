<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".presentation.screen.table3.view.Table3Activity">

    <TextView
        android:id="@+id/textViewTable3_description"
        style="@style/TextViewDescription"
        android:text="@string/text_better"/>

    <LinearLayout
        android:id="@+id/linearLayout_grid"
        android:layout_below="@id/textViewTable3_description"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

            <ImageView
                android:id="@+id/image0_table3"
                style="@style/imageTable3land" />

            <ImageView
                android:id="@+id/image1_table3"
                style="@style/imageTable3land" />

            <ImageView
                android:id="@+id/image2_table3"
                style="@style/imageTable3land" />

            <ImageView
                android:id="@+id/image3_table3"
                style="@style/imageTable3land" />

    </LinearLayout>


</RelativeLayout>
